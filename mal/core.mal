(def! _macro_magic
  :_I_tell_ya_this_is_a_MAL_macro_mark_my_words)

(def! _macro_wrap (fn* [f]
  [_macro_magic f]))

(def! _macro_unwrap (fn* [x]
  (if (vector? x)
    (if (= (first x) _macro_magic)
      (nth x 1)))))

(def! _macro? (fn* [x]
  (if (_macro_unwrap x)
    true
    false)))

