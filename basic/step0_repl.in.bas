GOTO MAIN

REM $INCLUDE: 'readline.in.bas'

REM READ(A$) -> R$
MAL_READ:
  R$=A$
  RETURN

REM EVAL(A$, E) -> R$
SUB EVAL
  R$=A$
END SUB

REM PRINT(A$) -> R$
MAL_PRINT:
  R$=A$
  RETURN

REM REP(A$) -> R$
SUB REP
  GOSUB MAL_READ
  A=R:CALL EVAL
  A=R:GOSUB MAL_PRINT
END SUB

REM MAIN program
MAIN:
  REPL_LOOP:
    A$="user> ":GOSUB READLINE: REM call input parser
    IF EOF=1 THEN GOTO QUIT

    A$=R$:CALL REP: REM call REP

    PRINT R$
    GOTO REPL_LOOP

  QUIT:
    REM PRINT "Free: "+STR$(FRE(0))
    END

